{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block content %}
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <img class="card-img-top" src="{{ asset(cat.image) }} ">
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        {{ cat.name }} - {{ cat.viewCounter }} vues
                    </div>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Race :</strong>
                            {{ cat.breed }}
                        </li>
                        <li class="list-group-item">
                            <strong>Tags :</strong>
                            {% for tag in cat.tags %}
                                <span class="badge badge-primary">
                                    {{ tag.name }}
                                </span>
                            {% endfor %}
                        </li>
                        <li class="list-group-item">
                            <strong>Date de naissance :</strong>
                            {{ cat.birthdate|date('d/m/Y') }}
                        </li>
                    </ul>
                    
                    <div class="card-body">
                        <p class="card-text">{{ cat.description }}</p>
                        <a href="{{ path('basket_add', {
                            'productId': cat.id
                        }) }}" class="card-link">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}