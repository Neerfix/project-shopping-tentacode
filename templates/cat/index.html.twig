{% extends 'base.html.twig' %}

{% block title %}Cat index{% endblock %}

{% block content %}
    <h1>Cat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Birthdate</th>
                <th>Image</th>
                <th>Description</th>
                <th>ViewCounter</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cat in cats %}
            <tr>
                <td>{{ cat.id }}</td>
                <td>{{ cat.name }}</td>
                <td>{{ cat.birthdate ? cat.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ cat.image }}</td>
                <td>{{ cat.description }}</td>
                <td>{{ cat.viewCounter }}</td>
                <td>
                    <a href="{{ path('cat_show', {'id': cat.id}) }}">show</a>
                    <a href="{{ path('cat_edit', {'id': cat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cat_new') }}">Create new</a>
{% endblock %}
