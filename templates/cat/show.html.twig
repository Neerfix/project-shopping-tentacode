{% extends 'base.html.twig' %}

{% block title %}Cat{% endblock %}

{% block content %}
    <h1>Cat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cat.name }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ cat.birthdate ? cat.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ cat.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cat.description }}</td>
            </tr>
            <tr>
                <th>ViewCounter</th>
                <td>{{ cat.viewCounter }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cat_index') }}">back to list</a>

    <a href="{{ path('cat_edit', {'id': cat.id}) }}">edit</a>

    {{ include('cat/_delete_form.html.twig') }}
{% endblock %}
